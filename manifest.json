{
	"name":			"Bird Spotter",
	"version":		"1.0.0",
	"manifest_version":	2,
	"description":		"Auto discover Twitter user links in webpages and display the Twitter button in the omnibar. Simply click the button to see all found @users and their follow buttons.",
	"background": {
		"scripts":	["background.js"]
	},
	"content_scripts": [{
		"matches":	[
			"http://*/*",
			"https://*/*",
			"ftp://*/*"
		],
		"run_at":	"document_end",
		"js":		["bird_spotter.js"]
	}],
	"page_action": {
		"default_icon":		"icons/twitter_newbird_blue.png",
		"default_title":	"Bird Spotter",
		"default_popup":	"popup.html"
	},
	"permissions": [
		"tabs",
		"https://*.twitter.com/*",
		"https://twitter.com/*"
	]
}