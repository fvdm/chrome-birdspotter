{
	"version":		"0.0.1",
	"name":			"Bird Spotter",
	"manifest_version":	2,
	"description":		"Auto discover Twitter 'follow me' links in webpages and display a Twitter icon in the omnibar. Simply click the button to follow the user.",
	"background": {
		"scripts":	["background.js"]
	},
	"content_scripts": [{
		"matches":	[
			"http://*/*",
			"https://*/*",
			"ftp://*/*"
		],
		"run_at":	"document_idle",
		"js":		["twitter_detect.js"]
	}],
	"page_action": {
		"default_icon":		"icons/twitter_newbird_blue.png",
		"default_title":	"Twitter username detected",
		"default_popup":	"popup.html"
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"ftp://*/*"
	]
}