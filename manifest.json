{
	"name":				"Bird Spotter",
	"version":			"1.2.0",
	"manifest_version":		2,
	"description":			"Auto discover Twitter user links in webpages. Click the bird to see and follow the detected @users.",
	"icons": {
		"16":			"icons/Chrome_Bird_Spotter_icon_16.png",
		"48":			"icons/Chrome_Bird_Spotter_icon_48.png",
		"128":			"icons/Chrome_Bird_Spotter_icon_128.png"
	},
	"offline_enabled":		false,
	"background": {
		"scripts":		["background.js"]
	},
	"content_scripts": [{
		"matches":	[
			"http://*/*",
			"https://*/*",
			"ftp://*/*"
		],
		"run_at":		"document_idle",
		"js":			["bird_spotter.js"]
	}],
	"page_action": {
		"default_icon":		"icons/twitter-bird-light-bgs.png",
		"default_title":	"Bird Spotter",
		"default_popup":	"popup.html"
	},
	"permissions": [
		"tabs",
		"https://*.twitter.com/*",
		"https://twitter.com/*"
	]
}