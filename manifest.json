{
	"name":			"Bird Spotter",
	"version":		"1.0.1",
	"manifest_version":	2,
	"description":		"Auto discover Twitter user links in webpages. Click the bird to see and follow the detected @users.",
	"icons": {
		"16":		"icons/Chrome_Bird_Spotter_logo_16.png",
		"48":		"icons/Chrome_Bird_Spotter_logo_48.png",
		"128":		"icons/Chrome_Bird_Spotter_logo_128.png"
	},
	"offline_enabled":	false,
	"background": {
		"scripts":	["background.js"]
	},
	"content_scripts": [{
		"matches":	[
			"http://*/*",
			"https://*/*",
			"ftp://*/*"
		],
		"run_at":	"document_end",
		"js":		["bird_spotter.js"]
	}],
	"page_action": {
		"default_icon":		"icons/twitter_newbird_blue.png",
		"default_title":	"Bird Spotter",
		"default_popup":	"popup.html"
	},
	"permissions": [
		"tabs",
		"https://*.twitter.com/*",
		"https://twitter.com/*"
	]
}